{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {#<script src="{{ 'js/validation.js' }}"></script>#}
    {#<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>#}
    <script>
        let openSearch = false;
        function openSearchForm() {
            if (!openSearch) {
                document.getElementById('searchForm').classList.remove("hidden-xs");
                document.getElementById('searchForm').classList.remove("hidden-sm");
                openSearch = true;
            } else {
                document.getElementById('searchForm').classList.add("hidden-xs");
                document.getElementById('searchForm').classList.add("hidden-sm");
                openSearch = false;
            }
        }
        $(document).ready(function() {
            $('li.dropdown').hover(function (e) {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeIn(200);
            }, function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeOut(200);
            });
        });
    </script>
{% endblock %}
{% block header %}
    {% include ':menu:header.html.twig' %}
    {% if not is_granted("ROLE_USER") %}
        {% include ':security:securityModals.html.twig' %}
    {% else %}
        {% block nav %}
            {% set menu = knp_menu_get('main', [], {'user': app.user.role}) %}
            {#{{ knp_menu_render('main', {'currentClass': 'active', 'user': app.user.role}) }}#}
            {{ knp_menu_render(menu) }}
        {% endblock %}
    {% endif %}
{% endblock %}
{% block body %}
    <div class="customCarousel">
        <div id="myCarousel" class="carousel slide col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8"
             data-ride="carousel" style="position:relative;z-index:1; overflow: hidden">
            <!-- Indicators -->
            <ol class="carousel-indicators" style="z-index:1 !important">
                <li data-target="#myCarousel" data-slide-to="0" class=""></li>
                <li data-target="#myCarousel" data-slide-to="1" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="2" class=""></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item">
                    <img src="https://img1.goodfon.ru/original/2048x1152/0/4f/podarki-konfety-cvety-torty.jpg" alt="Los Angeles" style="width:100%;">
                    <div class="carousel-caption">
                        <h3>Лучшие подарки</h3>
                        <p>Дарите подарки по поводу и без</p>
                    </div>
                </div>

                <div class="item active">
                    <img src="http://www.zastavki.com/pictures/1366x768/2012/Food_Differring_meal_Bakery_and_Coffee_033408_.jpg" alt="Chicago" style="width:100%;">
                    <div class="carousel-caption">
                        <h3>Только свежая выпечка</h3>
                        <p>Выпечка из местных кулинарий</p>
                    </div>
                </div>

                <div class="item">
                    <img src="http://www.zastavki.com/pictures/1366x768/2014/Food___Cakes_and_Sweet_____Candy_on_sticks_090938_24.jpg" alt="New York" style="width:100%;">
                    <div class="carousel-caption">
                        <h3>Сладкое для настроения</h3>
                        <p>Радуйте себя и близких!</p>
                    </div>
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
{% endblock %}
{% block footer %}
    <div class="info col-xs-offset-5 col-xs-3" style="float: right">
        <p>
            Проект разработан студентами курсов Itransition <br>
            Alexander Lapkovsky & Elizaveta Korob &copy 2017
        </p>
    </div>
{% endblock %}