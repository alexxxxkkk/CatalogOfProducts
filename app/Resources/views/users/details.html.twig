{% extends ':home:index.html.twig' %}

{% block body %}
    <div class="return col-xs-1 col-sm-3 col-md-2">
        <a onclick="javascript:history.back(); return false;">
            <i class="glyphicon glyphicon-chevron-left"></i>
            <span class="hidden-xs">Назад</span>
        </a>
    </div>

    {% for flash_message in app.session.flashbag.get('message') %}
        <div class="alert alert-info" role="alert" style="margin: 1% 15%">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{ flash_message }}
        </div>
    {% endfor %}

    <div style="margin-top: 2%" class="col-xs-12 col-md-offset-1 col-md-4">
        <h2>
            Профиль пользователя
            {% if user.id == app.user.id %}
                <a href="/users/edit/{{ user.id }}" class="btn btn-link">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            {% endif %}
        </h2>
        <div class="details">
            <p>
                <span>Полное имя: </span> {{ user.firstName }} {{ user.surname }}
            </p>
            <p>
                <span>Логин: </span> {{ user.username }}
            </p>
            <p>
                <span>E-mail: </span> {{ user.email }}
            </p>
            <p>
                <span>Роль: </span>
                {% if user.role == 'ROLE_ADMIN' %}
                    администратор
                {% elseif user.role == 'ROLE_MODERATE' %}
                    модератор
                {% else %}
                    пользователь
                {% endif %}
            </p>
        </div>
    </div>
{% endblock %}