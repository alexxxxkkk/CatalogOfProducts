<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">{{ 'Вход'|trans }}</h4>
            </div>
            <div class="modal-body">
                <form action="{{ path('login') }}" method="post" class="login" name="login">
                    <div class="col-sm-offset-2 col-sm-8">
                        <div class="error">
                            <span id="loginError"></span>
                        </div>
                        <label for="username">{{ 'Логин'|trans }}:</label>
                        <input type="text" id="username" name="_username" />
                        <label for="password">{{ 'Пароль'|trans }}:</label>
                        <input type="password" id="password" name="_password" />
                        <div style="display: inline">
                            <input type="button" id="login_user" value="{{ 'Войти'|trans }}" class="btn btn-default col-xs-12 col-sm-6"
                                   style="margin-right: 16px; margin-top: 10px;"/>
                            <a href="#" data-toggle="modal" data-target="#forgotPasswordModal" style="padding-top: 7px;"
                               data-dismiss="modal" aria-hidden="true" class="col-xs-12 col-sm-5">
                                {{ 'Забыли пароль'|trans }}?
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="registrationModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">{{ 'Регистрация'|trans }}</h4>
            </div>
            <div class="modal-body">
                {{ form_start(registerForm, { 'attr': {
                    'class': 'register' },
                    'action': path('register'),
                    'method': 'POST'
                }) }}
                <div class="col-sm-offset-2 col-sm-8">
                    <div class="error">
                        <span id="registrationError"></span>
                    </div>
                    {{ form_widget(registerForm) }}
                    <input type="button" id="register_user" value="{{ 'Зарегистрироваться'|trans }}" class="btn btn-default" />
                </div>
                {{ form_end(registerForm) }}
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="forgotPasswordModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">{{ 'Восстановление пароля'|trans }}</h4>
            </div>
            <div class="modal-body">
                {{ form_start(forgotPasswordForm, { 'attr': {
                    'class': 'forgotPassword' },
                    'action': path('forgot_password'),
                    'method': 'POST'
                }) }}
                <div class="col-sm-offset-2 col-sm-8">
                    <div class="error">
                        <span id="emailForgotError"></span>
                    </div>
                    {{ form_widget(forgotPasswordForm) }}
                    <input type="button" id="send_email" value="{{ 'Отправить'|trans }}" class="btn btn-default" />
                </div>
                {{ form_end(forgotPasswordForm) }}
            </div>
        </div>
    </div>
</div>

<script>
    $('#register_user').click(function () {
        registrationValidate();
    });
    $('#login_user').click(function () {
        loginValidate();
    });
    $('#send_email').click(function () {
        forgotValidate();
    });
</script>